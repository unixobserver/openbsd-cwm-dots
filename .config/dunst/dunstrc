#----------------------------------------------------------------------------------
# NOTE: The notifications set here are strictly shaped for a 1920x1080 display.
#
# Format parameters:
#
#   %a - appname
#   %s - summary
#   %b - body
#   %i - iconname (including its path)
#   %I - iconname (without its path)
#   %p - progress value if set ([  0%] to [100%]) or nothing
#----------------------------------------------------------------------------------

[global]
    #font = Spleen 32x64 Medium 24 
    font = Spleen 14
    markup = yes
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    show_age_threshold = -1
    word_wrap = yes
    ignore_newline = yes
    shrink = no
    transparency = 0
    idle_threshold = 0
    monitor = 0
    follow = mouse
    sticky_history = no
    history_length = 0
    show_indicators = yes
    line_height = 4
    separator_height = 0
    padding = 18
    stack_duplicates = true
    hide_duplicate_count = true
    horizontal_padding = 0
    separator_color = "#000000"
    frame_width = 0
	corner_radius = 0
	Class = Dunst
  
